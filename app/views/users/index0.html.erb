<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="users container-child col-md-4 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= link_to user_path(user) do %>
          <h4><strong><%= user.name %></strong></h4>
        <% end %>
        <p style="height: 3rem"><%= user.email %></p>
        <%= render 'follow_form', user: user %>
      </div>
  <% end %>
</div>

<div class="container">
    <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
        <h1>詩の一覧</h1>
        <% @poems.each do |poem| %>
            <div class="row">
                <h4><strong><%= poem.title %></strong></h4>
                <p><%= poem.content.truncate(20) %></p>
                <%= link_to "詳細", poem, class: 'btn btn-default btn-sm btn-success' %>
                <p style="float: right"><%= poem.created_at.to_datetime.strftime("%Y年%m月%d日") %></p>
            </div>
        <% end %>
    </div>
</div>
